<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacer"
        android:paddingLeft="@dimen/spacer"
        android:paddingRight="@dimen/spacer"
        android:paddingTop="@dimen/spacer" >
        <yuku.ambilwarna.AmbilWarnaSquare
            android:id="@+id/saturation_and_value_selection_view"
            android:layerType="software"
            android:layout_width="@dimen/hsv_width"
            android:layout_height="@dimen/hsv_height" />
        <ImageView
            android:id="@+id/saturation_and_value_selector_view"
            android:src="@drawable/ic_selector_image"
            android:background="@drawable/ic_selector_background"
            android:scaleType="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/hue_selection_view"
            android:src="@drawable/ambilwarna_hue"
            android:scaleType="fitXY"
            android:layout_below="@id/saturation_and_value_selection_view"
            android:layout_marginTop="45dp"
            android:layout_width="@dimen/hsv_height"
            android:layout_height="24dp" />
        <ImageView
            android:id="@+id/hue_selector_view"
            android:src="@drawable/ic_selector_image"
            android:background="@drawable/ic_selector_background"
            android:scaleType="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:layout_below="@id/hue_selection_view"
            android:layout_width="@dimen/hsv_width"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/current_color_hint"
                android:text="@string/current_color_hint"
                android:gravity="center_vertical|start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <TextView
                android:id="@+id/current_color_hex"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.275"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.325"/>
            <ImageView
                android:id="@+id/current_color_view"
                android:background="#faa"
                android:layout_gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>