<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/ambilwarna_spacer"
        android:paddingLeft="@dimen/ambilwarna_spacer"
        android:paddingRight="@dimen/ambilwarna_spacer"
        android:paddingTop="@dimen/ambilwarna_spacer" >
        <yuku.ambilwarna.AmbilWarnaSquare
            android:id="@+id/saturation_and_value_selection_view"
            android:layerType="software"
            android:layout_width="@dimen/ambilwarna_hsvWidth"
            android:layout_height="@dimen/ambilwarna_hsvHeight" />
        <ImageView
            android:id="@+id/saturation_and_value_selector_view"
            android:src="@drawable/ic_saturation_and_value_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/hue_selection_view"
            android:src="@drawable/ambilwarna_hue"
            android:scaleType="fitXY"
            android:layout_toRightOf="@id/saturation_and_value_selection_view"
            android:layout_marginLeft="@dimen/ambilwarna_spacer"
            android:layout_width="@dimen/ambilwarna_hueWidth"
            android:layout_height="@dimen/ambilwarna_hsvHeight" />
        <ImageView
            android:id="@+id/hue_selector_view"
            android:src="@drawable/ic_hue_selector"
            android:scaleType="matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/saturation_and_value_selection_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ambilwarna_spacer"
            android:gravity="center"
            android:orientation="horizontal" >
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="30dp" >
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/ambilwarna_alphacheckered_tiled" />
                <View
                    android:id="@+id/view_old_color"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#faa" />
            </FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ambilwarna_spacer"
                android:paddingRight="@dimen/ambilwarna_spacer"
                android:src="@drawable/ambilwarna_arrow_right" />
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="30dp" >
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/ambilwarna_alphacheckered_tiled" />
                <View
                    android:id="@+id/view_new_color"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#aaf" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>