<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacer"
        android:paddingLeft="@dimen/spacer"
        android:paddingRight="@dimen/spacer"
        android:paddingTop="@dimen/spacer" >
        <yuku.ambilwarna.AmbilWarnaSquare
            android:id="@+id/saturation_and_value_selection_view"
            android:layerType="software"
            android:layout_width="@dimen/hsv_width"
            android:layout_height="@dimen/hsv_height" />
        <ImageView
            android:id="@+id/saturation_and_value_selector_view"
            android:src="@drawable/ic_saturation_and_value_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/hue_selection_view"
            android:src="@drawable/ambilwarna_hue"
            android:scaleType="fitXY"
            android:layout_below="@id/saturation_and_value_selection_view"
            android:layout_marginTop="45dp"
            android:layout_width="@dimen/hsv_height"
            android:layout_height="24dp" />
        <ImageView
            android:id="@+id/hue_selector_view"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:scaleType="matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hue_selection_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="30dp" >
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/ambilwarna_alphacheckered_tiled" />
                <View
                    android:id="@+id/current_color_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#faa" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>